<resources>

    <style name="Ripple">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Ripple.Borderless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="editText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="collapsingToolbar">
        <item name="contentScrim">?attr/android:colorBackground</item>
    </style>

    <style name="background">
        <item name="android:background">?attr/android:colorBackground</item>
    </style>

</resources>
